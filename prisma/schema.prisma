generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Author {
  id       String     @id @default(cuid())
  name     String     @unique
  Document Document[]
}

model Document {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  filePathName String   @unique
  author       Author   @relation(fields: [authorId], references: [id])
  authorId     String
}
